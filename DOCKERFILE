# --- STAGE 1: Build la aplicación (usando Node.js 20 LTS) ---
FROM node:20-alpine AS builder

WORKDIR /app

COPY package.json package-lock.json ./

RUN npm ci

COPY . .

# *** ASEGÚRATE QUE ESTA LÍNEA ES 'npm run build' Y NO 'bun run build' ***
RUN npm run build # <--- ¡Aquí está la clave!

# --- STAGE 2: Servir la aplicación (usando Nginx para producción) ---
FROM nginx:alpine

COPY --from=builder /app/dist /usr/share/nginx/html

# ... (resto de tu Dockerfile)